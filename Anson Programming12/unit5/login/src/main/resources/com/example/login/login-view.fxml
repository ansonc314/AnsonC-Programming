<?import javafx.scene.layout.VBox?>

<VBox id="mainBox" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="com.example.login.loginController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <ImageView fitHeight="69.0" fitWidth="68.0" pickOnBounds="true" preserveRatio="true" styleClass="logoImage">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                    <image>
                        <Image url="@ACLogo.png" />
                    </image>
                </ImageView>
                <Label id="companyLogo" stylesheets="@style.css" text="Zara ABC" />
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="250.0" spacing="10.0" styleClass="innerBox" stylesheets="@style.css" />
      <HBox prefHeight="277.0" prefWidth="596.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="270.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@logo1.jpg" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <VBox prefHeight="80.0" prefWidth="399.0">
               <children>
                    <HBox alignment="CENTER" prefHeight="84.0" prefWidth="466.0" spacing="10.0" styleClass="innerBox" stylesheets="@style.css" />
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                            <TextField promptText="UserName" styleClass="custom-text-field" stylesheets="@style.css" GridPane.columnIndex="1" />
                            <TextField promptText="Password" styleClass="custom-text-field" stylesheets="@style.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Button id="loginButton" mnemonicParsing="false" prefHeight="29.0" prefWidth="77.0" stylesheets="@style.css" text="Login" GridPane.rowIndex="2" />
                            <Button id="loginButton" mnemonicParsing="false" onAction="#exitSystem" prefHeight="82.0" prefWidth="109.0" stylesheets="@style.css" text="Exit" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Label" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>
