    <children>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="250.0" spacing="10.0" styleClass="innerBox" stylesheets="@style.css">
         <children>
            <ImageView fitHeight="61.0" fitWidth="435.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@banner2.png" />
               </image>
               <HBox.margin>
                  <Insets bottom="50.0" top="80.0" />
               </HBox.margin>
            </ImageView>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin></HBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label id="H3_label" stylesheets="@style.css" text="User Name" textAlignment="CENTER" textFill="#fcfcfc">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
                <TextField fx:id="userName_loginWin" prefHeight="25.0" prefWidth="146.0" promptText="User Name" styleClass="custom-text-field" stylesheets="@style.css">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </TextField>
            <Label id="H3_label" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="137.0" stylesheets="@style.css" text="Password" textAlignment="CENTER" textFill="#fcfcfc">
