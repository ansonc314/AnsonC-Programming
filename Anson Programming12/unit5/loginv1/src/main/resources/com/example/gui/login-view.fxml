            <Glow />
         </effect>
         <padding>
            <Insets right="11.0" />
         </padding>
      </ButtonBar>
      <Label id="H5_label" prefHeight="17.0" prefWidth="258.0" stylesheets="@style.css" text="* This is a trial version" textFill="#f5f4f4">
         <padding>
            <Insets top="30.0" />
         </padding>
      </Label>
      <Label id="H5_label" prefHeight="17.0" prefWidth="258.0" text="Default user: admin" textFill="#f5f4f4" />
      <Label id="H5_label" prefHeight="17.0" prefWidth="258.0" text="Default password: password" textFill="#f5f4f4" />
