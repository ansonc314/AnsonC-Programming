                  <Insets left="50.0" top="20.0" />
               </VBox.margin>
            </Label>
                <TextField fx:id="password_loginWin" promptText="Password" styleClass="custom-text-field" stylesheets="@style.css">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <ButtonBar nodeOrientation="LEFT_TO_RIGHT" opacity="0.61" prefHeight="40.0" prefWidth="200.0">
         <buttons>
                <Button id="Button" fx:id="buttonLogin" alignment="CENTER" minWidth="60.0" mnemonicParsing="false" onAction="#loginButtonPressed" prefHeight="27.0" prefWidth="110.0" stylesheets="@style.css" text="Login" textAlignment="CENTER" />
                <Button id="Button" fx:id="buttonHelp" alignment="CENTER" minWidth="60.0" mnemonicParsing="false" onAction="#openHelpWindow" prefHeight="27.0" prefWidth="200.0" stylesheets="@style.css" text="Help" textAlignment="CENTER" />
